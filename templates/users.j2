{% extends "base.j2" %}
{% block content %}

</body>
    <table id="us" class="display" width="100%">
        <thead>
		<tr>
			<th>User</th>
			<th>Cards</th>
			<th>Collection Value</th>
			<th>GP</th>
		</tr>
	</thead>
	<tbody>
            {% for u in users %}
	    <tr>
            <td><a href="https://www.moorednd.com/satchemon/user/{{ u[1] }}">{{ u[0]}}</a><br></td>
	    <td>{{ u[2] }}</td>
	    <td>{{ u[3]|round(3) }}</td>
	    <td>{{ u[4]|round(3) }}</td>
	    </tr>
            {% endfor %}
	</tbody>
